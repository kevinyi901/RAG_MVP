FROM nvidia/cuda:13.0.0-runtime-ubi8

# Install Python and other dependencies
RUN microdnf install -y python3 python3-pip git && \
    python3 -m pip install --upgrade pip

# Install vllm (latest stable)
RUN python3 -m pip install vllm

# (Optional) Install any other dependencies your project needs
# RUN python3 -m pip install <other-packages>

# Set the entrypoint for vLLM OpenAI-compatible API server
CMD ["python3", "-m", "vllm.entrypoints.openai.api_server"]
